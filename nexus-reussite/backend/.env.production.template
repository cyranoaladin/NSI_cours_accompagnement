# Copy this file to .env.production and fill in your values

# === FLASK CONFIGURATION ===
FLASK_ENV=production
SECRET_KEY=your-super-secret-production-key-change-this
JWT_SECRET_KEY=your-jwt-secret-key-change-this
CSRF_SECRET_KEY=your-csrf-secret-key-change-this

# === DATABASE CONFIGURATION ===
DATABASE_URL=postgresql://username:password@host:port/database_name
DB_POOL_SIZE=20
DB_POOL_TIMEOUT=60
DB_POOL_RECYCLE=3600
DB_MAX_OVERFLOW=30

# === REDIS CONFIGURATION ===
REDIS_URL=redis://localhost:6379/0

# === CACHE TTL SETTINGS ===
CACHE_TTL_SHORT=600
CACHE_TTL_MEDIUM=7200
CACHE_TTL_LONG=86400
CACHE_TTL_PERMANENT=604800

# === CORS CONFIGURATION ===
CORS_ORIGINS=https://yourdomain.com,https://www.yourdomain.com
CORS_TRUSTED_DOMAINS=yourdomain.com,www.yourdomain.com

# === SENTRY ERROR TRACKING ===
SENTRY_DSN=https://your-sentry-dsn@sentry.io/project-id
SENTRY_TRACES_SAMPLE_RATE=0.1
SENTRY_PROFILES_SAMPLE_RATE=0.1

# === OPENAI CONFIGURATION ===
OPENAI_API_KEY=your-openai-api-key
OPENAI_MODEL=gpt-4

# === EMAIL CONFIGURATION ===
MAIL_SERVER=smtp.your-provider.com
MAIL_PORT=587
MAIL_USE_TLS=true
MAIL_USERNAME=your-email@domain.com
MAIL_PASSWORD=your-email-password

# === COMPRESSION SETTINGS ===
COMPRESS_LEVEL=6
COMPRESS_MIN_SIZE=500

# === RATE LIMITING ===
RATELIMIT_DEFAULT=1000 per day;100 per hour;2 per second

# === LOGGING ===
LOG_LEVEL=INFO

# === PERFORMANCE SETTINGS ===
ENABLE_METRICS=true
ENABLE_SQL_PROFILING=false

# === UPLOAD SETTINGS ===
UPLOAD_FOLDER=/app/uploads
MAX_CONTENT_LENGTH=16777216
